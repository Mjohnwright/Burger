<div class="container bg">

	<div class="row">
		<div class="top-section">
			<div class="center col-sm-12">
				<img src="assets/image/burger1.jpg" style = alt="burger">
				<h2>Burgers! Burgers! Burgers!</h2>

				<p></p>
			</div>
		</div>
	</div>
	<!-- end .row -->
	{{!-- *************************************************************************** --}}

	<div class="row">
		<div class="middle-section">

			<div class="col-sm-6">
				<h2>Burgers To DEVOUR!</h2>
				<li>
					{{#each burgers}}
						{{#if devoured}}
							{{> burgers/burger-block devoured=false}} {{/if}}
					{{/each}}
				</li>
			</div>

			<div class="col-sm-6">
				<h2>Burgers devoured</h2>
				<ul>
					{{#each burgers}}
						{{#unless devoured}}
							<li>
								{{id}}. {{burger_name}}
							</li>
						{{/unless}}
					{{/each}}
				</ul>
			</div>
		</div>

	</div>
	{{!-- end row --}}
	{{!-- ***************************************************************************** --}}


	<div class="row">
		<div class="lower-section">
		<div class="center col-sm-12">
			<h2>Add a Burger</h2>
			<form class="create-form">

				<div class="field">
					<label class="label" for="burger">Burger Name:</label>
					<input type="text" id="burger" name="name" class="input" required>
					<button class="button is-danger" type="submit ">Add Burger</button>
				</div>
			</form>
		</div>
		</div>
	</div>
	<!-- end .row -->

</div>